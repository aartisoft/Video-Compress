<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:background="@android:color/white">


    <ImageView
            android:src="@android:drawable/sym_def_app_icon"
            android:layout_width="104dp"
            android:layout_height="93dp"
            android:id="@+id/MenuImage"
            app:layout_constraintEnd_toStartOf="@+id/MenuText" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="4dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/MenuText"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:textStyle="bold" android:textAlignment="viewStart"
            app:layout_constraintStart_toEndOf="@+id/MenuImage" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
